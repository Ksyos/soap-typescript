{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "pretty": true
  },
  "include": [
    "controllers/**/*",
    "models/**/*",
    "specs/**/*"
  ],
  "files": [
    "../utils"
  ],
  "exclude": [
    "../node_modules"
  ]
}
